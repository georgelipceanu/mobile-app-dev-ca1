<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp"
    android:elevation="24dp"
    app:cardCornerRadius="24dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#FFDAE4"
    android:foreground="?attr/selectableItemBackground" >
    <!--ref for ?attr/selectableItemBackground ripple: https://hanru-yeh.medium.com/about-android-ripple-touch-feedback-on-different-api-level-fdfb6956b54f -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/cloudjobTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="30sp"
            tools:text="A Title"
            tools:ignore="RelativeOverlap" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_below="@id/cloudjobTitle"
            tools:text="A Description" />

        <TextView
            android:id="@+id/cpu"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/description"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/black"
            android:textStyle="italic"
            tools:text="CPU Type" />

        <TextView
            android:id="@+id/replicaCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cpu"
            android:layout_marginTop="4dp"
            android:textStyle="italic"
            android:textColor="@android:color/black"
            tools:text="Replica Count" />

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/replicaCount"
            android:layout_marginTop="4dp"
            android:textStyle="italic"
            android:textColor="@android:color/black"
            tools:text="Duration" />

        <TextView
            android:id="@+id/deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/duration"
            android:layout_marginTop="4dp"
            android:textStyle="italic"
            android:textColor="@android:color/holo_red_dark"
            tools:text="A Deadline" />

        <TextView
            android:id="@+id/emissions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/deadline"
            android:layout_marginTop="4dp"
            android:textStyle="italic"
            android:textColor="@android:color/black"
            tools:text="Emissions " />

        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="@string/delete_cloudJob"
            android:src="@android:drawable/ic_menu_delete"
            app:tint="@color/colorAccent" />

        <ImageView
            android:id="@+id/imageIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="78dp"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="@string/change_cloudjob_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>